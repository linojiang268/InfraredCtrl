<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/top_navigation"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btBack"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/bt_back_style" />

        <TextView
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:text="@string/setting_up_tw_about_yunduo"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="70dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sSetScrollView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <!-- android:layout_width="380dp" -->
            <!-- android:layout_height="280dp" -->

            <ImageView
                android:layout_width="190dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/about_indeo_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:background="@drawable/task_list_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_pressed_click_style"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp" >

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.0"
                    android:gravity="left|center_vertical"
                    android:text="版本"
                    android:textColor="@color/font_black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvVersionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:text="未知"
                    android:textColor="@color/font_Gray_deep"
                    android:textSize="17sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvUpdateAppVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/font_Gray_deep"
                android:layout_marginTop="8dp"
                android:text="@string/about_canot_get_version" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginTop="16dp"
                android:background="@drawable/task_list_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_pressed_click_style"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp" >

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.0"
                    android:gravity="left|center_vertical"
                    android:text="@string/about_title_site"
                    android:textColor="@color/font_black"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:autoLink="all"
                    android:gravity="right|center_vertical"
                    android:text="@string/about_value_site"
                    android:textColor="@color/font_Gray_deep"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/task_list_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_pressed_click_style"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp" >

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.0"
                    android:gravity="left|center_vertical"
                    android:text="@string/about_title_phone"
                    android:textColor="@color/font_black"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:autoLink="all"
                    android:gravity="right|center_vertical"
                    android:text="@string/about_value_phone"
                    android:textColor="@color/font_Gray_deep"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/task_list_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_pressed_click_style"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp" >

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.0"
                    android:gravity="left|center_vertical"
                    android:text="@string/about_title_address"
                    android:textColor="@color/font_black"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:text="@string/about_value_address"
                    android:textColor="@color/font_Gray_deep"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:background="@drawable/task_list_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:layout_marginTop="30dp"
                android:background="@drawable/task_list_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_pressed_click_style"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp" >

                <TextView
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="@string/about_value_company"
                    android:textColor="@color/font_black"
                    android:textSize="17sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btUpdateFireWareVersion"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/bt_common_big_green_style"
                android:gravity="center"
                android:text="@string/about_fireware_update"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="48dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>